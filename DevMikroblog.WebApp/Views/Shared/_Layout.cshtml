<!DOCTYPE html>
<html ng-app="DevMikroblog">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" ng-controller="AccountController as account">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new {area = ""}, null)</li>
                </ul>
                <ul class="nav navbar-nav navbar-right" id="logOff">
                    <li style="color: white;" ng-show="isLogged"><a href="#">Witaj! <i>{{account.userName}}</i></a></li>
                    <li><button class="btn btn-primary" ng-click="account.logout()" ng-show="isLogged">Wyloguj się</button></li>
                </ul>
                <form class="navbar-form navbar-right" role="search" id="loginForm" ng-show="!isLogged">
                    <div class="form-group">
                        <input type="text" class="form-control" name="loginData.UserName" placeholder="Username" required="" ng-model="account.loginData.UserName">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="loginData.Password" placeholder="Password" required ng-model="account.loginData.Password">
                    </div>
                    <button type="submit" class="btn btn-primary" ng-click="account.login()">Zaloguj się</button>
                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#registerModal">Zarejestruj się</button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/app/apiUrls.js"></script>
    <script src="~/Scripts/app/constants.js"></script>
    <script type="text/javascript" src="~/Scripts/app/model.js"></script>
    <script type="text/javascript" src="~/Scripts/app/postService.js"></script>
    <script src="~/Scripts/app/accountService.js"></script>
    <script type="text/javascript" src="~/Scripts/app/postController.js"></script>
    <script src="~/Scripts/app/accountController.js"></script>
    <script type="text/javascript" src="~/Scripts/app/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
