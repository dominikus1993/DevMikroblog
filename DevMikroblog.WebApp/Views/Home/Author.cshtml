<div class="well" ng-show="$root.isLogged">
    <h4><i class="fa fa-paper-plane-o"></i> Dodaj Post:</h4>
    <form role="form" name="post">
        <div class="form-group">
            <input type="text" class="form-control" name="title" ng-model="pc.postToAdd.Title" placeholder="Wpisz tytuł" required />

            <div ng-messages="post.title.$error" style="color: maroon" role="alert">
                <div ng-message="required">Pole Tytuł jest puste</div>
            </div>
            <textarea class="form-control" name="message" rows="3" required ng-model="pc.postToAdd.Message" placeholder="Wpisz wiadomość"></textarea>
            <div ng-messages="post.message.$error" style="color: maroon" role="alert">
                <div ng-message="required">Pole Wiadomość jest puste</div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" ng-click="pc.add()"><i class="fa fa-reply"></i> Submit</button>
    </form>
</div>

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<div class="container" ng-repeat="post in pc.posts">
    <div class="col-sm-12">
        <div class="panel panel-white post panel-shadow">
            <div class="post-heading">
                <div class="pull-left image">
                    <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
                </div>
                <div class="pull-left meta">
                    <div class="title h5">
                        <a href="#!/Author/{{post.AuthorName}}"><b>{{post.AuthorName}}</b></a>
                        dodał wpis.
                    </div>
                    <h6 class="text-muted time">{{pc.dateAgo(post.Date)}}</h6>
                </div>
            </div>
            <div class="post-description">
                <p>{{post.Message}}</p>
                <div class="stats">
                    <a href="" class="btn btn-default stat-item" ng-click="(pc.userVotedUp(post.Id, post.AuthorId) || !$root.isLogged) || pc.voteUp(post.Id)" ng-disabled="(pc.userVotedUp(post.Id, post.AuthorId) || !$root.isLogged)">
                        <i class="fa fa-thumbs-up icon"></i>{{post.Rate}}
                    </a>
                    <a href="#!/Post/{{post.Id}}" class="btn btn-default stat-item">
                        <i class="fa fa-share icon"></i>Wejdź
                    </a>
                    <a href="" onclick="confirm('Napewno chcesz usunąć swój cenny wpis?')" ng-click="pc.delete(post.Id)" ng-show="pc.isOwner(post.AuthorName)" class="btn btn-default stat-item">
                        <i class="glyphicon glyphicon-remove icon"></i>Usuń
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


